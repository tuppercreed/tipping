// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Round {
  year  Int
  round Int
  name  String

  Game Game[]
  @@id([year, round])
}

model Team {
  id       Int     @id
  name     String  @unique
  longName String?
  Tip      Tip[]
  homeGame Game[]  @relation("HomeGame")
  awayGame Game[]  @relation("AwayGame")
}

model Game {
  id          Int       @id
  venue       String
  date        DateTime?
  roundYear   Int
  roundNumber Int
  round       Round     @relation(fields: [roundYear, roundNumber], references: [year, round])
  homeTeam    Team      @relation(name: "HomeGame", fields: [homeTeamId], references: [id])
  awayTeam    Team      @relation(name: "AwayGame", fields: [awayTeamId], references: [id])
  homeTeamId  Int
  awayTeamId  Int
  Tip         Tip[]
}

model Competition {
  id    String @id @default(cuid())
  name  String
  users User[] @relation()
}

model User {
  id           String        @id @default(cuid())
  email        String?       @unique
  createdAt    DateTime      @default(now())
  competitions Competition[] @relation()
  tips         Tip[]
}

model Tip {
  id   Int  @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])
  game Game @relation(fields: [gameId], references: [id])

  userId String
  teamId Int
  gameId Int
}
